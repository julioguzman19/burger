<h1>Burgers!</h1>

<div class ="row">
    <div class ="col-md-5 burger-box" >

        <ul class="list-group">
            {{#each burgers}}
                {{#unless devoured}}
                   
                {{/unless}}

        {{/each}}
        </ul>
    </div>

    <div class="col-md-5 burger-box" id="devoured">
        <ul class="list-group">
            {{#each burgers}}
                {{#if devoured}}
                    {{>burgers/burgerDevoured-block}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<!--user input-->
<div class="row justify-content-center bottom">
    <div class = "col-md-5">
        <form class = "create-form">
            <div class ="form-group">
                <input class = "form-control form-control-lg" type="text" name="burger_name" id="burgerInfo" placeholder="Enter a burger">
                
                <button type = "submit" class ="btn btn-primary btn-lg burger-button"> 
                    Submit
                </button>

            </div>
        </form>
    </div>
</div>
